<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
       <!--Proje Servlet Tanımlamaları-->
 
       <error-page>
        <location>/error.jsp</location>
</error-page>
       
       
       
<servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.finalOtelRezervasyon.Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.finalOtelRezervasyon.Servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.finalOtelRezervasyon.Servlets.ProfileServlet</servlet-class>
    </servlet>
    
      <servlet>
        <servlet-name>OdaServlet</servlet-name>
        <servlet-class>com.finalOtelRezervasyon.Servlets.OdaServlet</servlet-class>
    </servlet>
    
     <servlet>
        <servlet-name>RezervasyonServlet</servlet-name>
        <servlet-class>com.finalOtelRezervasyon.Servlets.RezervasyonServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>Musteri</servlet-name>
        <servlet-class>com.finalOtelRezervasyon.Servlets.Musteri</servlet-class>
    </servlet>
    <!--Proje Servlet Tanımlamaları-->
    
        <!--Proje mapping Tanımlamaları-->
        <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
   
      <servlet-mapping>
        <servlet-name>RezervasyonServlet</servlet-name>
        <url-pattern>/rezervasyonekle</url-pattern>
    </servlet-mapping>
    
      <servlet-mapping>
        <servlet-name>RezervasyonServlet</servlet-name>
        <url-pattern>/rezervasyonlistesi</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/mesajgonder</url-pattern>
    </servlet-mapping>
    
     <servlet-mapping>
        <servlet-name>OdaServlet</servlet-name>
        <url-pattern>/odalar</url-pattern>
    </servlet-mapping>
 <servlet-mapping>
        <servlet-name>OdaServlet</servlet-name>
        <url-pattern>/odaekleme</url-pattern>
    </servlet-mapping>
 <servlet-mapping>
        <servlet-name>OdaServlet</servlet-name>
        <url-pattern>/manzaraekleme</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>Musteri</servlet-name>
        <url-pattern>/musteriekleme</url-pattern>
    </servlet-mapping>
    
        <servlet-mapping>
        <servlet-name>Musteri</servlet-name>
        <url-pattern>/bilgiguncelleme</url-pattern>
    </servlet-mapping>
    
    

 
    
    
    
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
</web-app>
